<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to follows_user_path(user) do %>
      <%= following_users.count %>
      <%end%>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to followers_user_path(user) do %>
      <%= follower_users.count %>
      <%end%>
    </th>
  </tr>
</table>

<div class='row'>
  <% if user_signed_in? && user == current_user %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <%end%>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す" user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
    <%else%>
      <%= link_to "フォローする" user_relationships_path(user.id), method: :post, class: "btn-sm btn-success" %>
    <%end%>
  <%end%>
</div>