<% if @model == 'user' %>
  <h2>Users search for"<%= @content %>"</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <%= link_to user_path(user) do %>
            <td><%= user.name %></td>
          <%end%>
        </tr>
      <%end%>
    </tbody>
  </table>

<%else @model == 'book' %>

  <h2>Books search for"<%= @content %>"</h2>
  <table class='table'>
    <thead>
      <tr>
        <th colspan="3"></th>
        <th>title</th>
        <th>opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |book| %>
        <tr>
          <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <%= link_to book_path(book) do %>
            <td><%= book.title %></td>
          <%end%>
          <td><%= book.body %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
<%end%>